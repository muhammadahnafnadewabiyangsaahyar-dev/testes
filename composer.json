{
    "name": "kaori/hr-system",
    "description": "Sistem HR Kaori - Aplikasi Manajemen Sumber Daya Manusia",
    "version": "1.0.0",
    "type": "project",
    "autoload": {
        "psr-4": {
            "KaoriHR\\": "backend/src/"
        }
    },
    "require": {
        "php": ">=8.0",
        "monolog/monolog": "^3.0",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload-dev": {
        "psr-4": {
            "KaoriHR\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}