<?php
require_once 'logger.php';
session_start();

// 1. PENJAGA GERBANG: Pastikan pengguna sudah login
if (!isset($_SESSION['user_id'])) {
    header('Location: index.php?error=notloggedin'); 
    exit;
}
$user_id = $_SESSION['user_id'];

// 2. Muat Koneksi & Ambil Data User
include 'connect.php';

// Handler untuk pengajuan izin yang diperbaiki
$success_message = '';
$error_message = '';
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    // Debug: log POST data
    error_log("POST data received: " . json_encode($_POST));
    
    // Ambil data dari form
    $jenis_izin = $_POST['jenis_izin'] ?? 'izin';
    $perihal = $_POST['perihal'] ?? '';
    $tanggal_mulai = $_POST['tanggal_izin'] ?? '';
    $tanggal_selesai = $_POST['tanggal_selesai'] ?? '';
    $lama_izin = $_POST['lama_izin'] ?? 0;
    $alasan = $_POST['alasan_izin'] ?? '';
    $signature_data = $_POST['signature_data'] ?? '';
    $dokumen_medis = $_FILES['dokumen_medis'] ?? null;

    // Validasi field wajib
    if (empty($jenis_izin) || empty($perihal) || empty($tanggal_mulai) || 
        empty($tanggal_selesai) || empty($lama_izin) || empty($alasan)) {
        $error_message = 'Semua field wajib diisi.';
    } else {
        // Ambil data user
        $sql_user = "SELECT * FROM register WHERE id = ?";
        $stmt_user = $pdo->prepare($sql_user);
        $stmt_user->execute([$user_id]);
        $user_data = $stmt_user->fetch(PDO::FETCH_ASSOC);

        if (!$user_data) {
            $error_message = 'Data pengguna tidak ditemukan.';
        } else {
            // Validasi khusus untuk izin sakit
            $is_sick_leave = ($jenis_izin === 'sakit');
            $require_dokumen_medis = ($is_sick_leave && $lama_izin >= 2);
            
            if ($is_sick_leave && $require_dokumen_medis && (!$dokumen_medis || $dokumen_medis['error'] !== UPLOAD_ERR_OK)) {
                $error_message = 'Izin sakit minimal 2 hari wajib lampirkan dokumen medis.';
            } else if ($is_sick_leave && $require_dokumen_medis && $dokumen_medis) {
                // Validasi file dokumen medis
                if ($dokumen_medis['error'] !== UPLOAD_ERR_OK) {
                    $error_message = 'Error saat upload dokumen medis: ' . $dokumen_medis['error'];
                } else if ($dokumen_medis['size'] > 2 * 1024 * 1024) { // 2MB limit
                    $error_message = 'Ukuran file dokumen medis maksimal 2MB.';
                } else {
                    $allowed_types = ['image/jpeg', 'image/jpg', 'image/png', 'application/pdf'];
                    $finfo = finfo_open(FILEINFO_MIME_TYPE);
                    $mime_type = finfo_file($finfo, $dokumen_medis['tmp_name']);
                    finfo_close($finfo);
                    
                    if (!in_array($mime_type, $allowed_types)) {
                        $error_message = 'Format file dokumen medis harus PDF, JPG, atau PNG.';
                    } else {
                        // Validasi tanda tangan
                        if (empty($user_data['tanda_tangan_file']) && empty($signature_data)) {
                            $error_message = 'Tanda tangan wajib diisi.';
                        } else {
                            // Semua validasi berhasil, proceed ke processing
                            try {
                                $pdo->beginTransaction();
                                
                                // Handle dokumen medis upload
                                $dokumen_medis_file = null;
                                if ($dokumen_medis && $dokumen_medis['error'] === UPLOAD_ERR_OK) {
                                    $dokumen_ext = pathinfo($dokumen_medis['name'], PATHINFO_EXTENSION);
                                    $dokumen_filename = 'dokumen_medis_' . $user_id . '_' . time() . '.' . $dokumen_ext;
                                    $dokumen_path = 'uploads/dokumen_medis/' . $dokumen_filename;
                                    
                                    if (!is_dir('uploads/dokumen_medis')) {
                                        mkdir('uploads/dokumen_medis', 0777, true);
                                    }
                                    
                                    if (move_uploaded_file($dokumen_medis['tmp_name'], $dokumen_path)) {
                                        $dokumen_medis_file = $dokumen_filename;
                                    }
                                }
                                
                                // Handle tanda tangan
                                $ttd_file = $user_data['tanda_tangan_file'];
                                if (empty($ttd_file) && !empty($signature_data)) {
                                    $ttd_file = 'ttd_' . $user_id . '_' . time() . '.png';
                                    $ttd_path = 'uploads/tanda_tangan/' . $ttd_file;
                                    $data = $signature_data;
                                    
                                    if (preg_match('/^data:image\/\w+;base64,/', $data)) {
                                        $data = substr($data, strpos($data, ',') + 1);
                                        $data = base64_decode($data);
                                        file_put_contents($ttd_path, $data);
                                        
                                        // Update tanda tangan di database
                                        $stmt = $pdo->prepare('UPDATE register SET tanda_tangan_file = ? WHERE id = ?');
                                        $stmt->execute([$ttd_file, $user_id]);
                                    }
                                }
                                
                                // Generate nomor surat
                                $nomor_surat = strtoupper($jenis_izin) . date('YmdHis') . $user_id;
                                $file_surat = 'surat_' . $jenis_izin . '_' . $nomor_surat . '.docx';
                                $path_surat = 'uploads/surat_izin/' . $file_surat;
                                
                                if (!is_dir('uploads/surat_izin')) {
                                    mkdir('uploads/surat_izin', 0777, true);
                                }
                                
                                // Simpan file dummy
                                file_put_contents($path_surat, 'Surat ' . $jenis_izin . ': ' . json_encode([
                                    'nomor' => $nomor_surat,
                                    'perihal' => $perihal,
                                    'jenis' => $jenis_izin,
                                    'tanggal_mulai' => $tanggal_mulai,
                                    'tanggal_selesai' => $tanggal_selesai,
                                    'lama' => $lama_izin,
                                    'alasan' => $alasan,
                                    'user' => $user_data['nama_lengkap'],
                                    'outlet' => $user_data['outlet'],
                                    'posisi' => $user_data['posisi'],
                                    'dokumen_medis' => $dokumen_medis_file
                                ]));
                                
                                // Simpan ke database dengan kolom enhanced
                                $sql = "INSERT INTO pengajuan_izin (
                                    user_id, perifal, tanggal_mulai, tanggal_selesai, 
                                    lama_izin, alasan, file_surat, tanda_tangan_file, 
                                    status, tanggal_pengajuan, outlet, posisi, 
                                    jenis_izin, require_dokumen_medis, dokumen_medis_file,
                                    approval_status
                                ) VALUES (?, ?, ?, ?, ?, ?, ?, ?, 'pending', NOW(), ?, ?, ?, ?, ?, ?)";
                                
                                $stmt = $pdo->prepare($sql);
                                $stmt->execute([
                                    $user_id, $perihal, $tanggal_mulai, $tanggal_selesai,
                                    $lama_izin, $alasan, $file_surat, $ttd_file,
                                    $user_data['outlet'], $user_data['posisi'],
                                    ucfirst($jenis_izin), $require_dokumen_medis ? 1 : 0, 
                                    $dokumen_medis_file, 'pending_supervisor'
                                ]);
                                
                                $pdo->commit();
                                
                                // Kirim notifikasi
                                $notification_result = sendLeaveNotifications($pdo, $user_data, $jenis_izin, $nomor_surat);
                                
                                $success_message = "Pengajuan surat izin berhasil! Nomor: $nomor_surat";
                                if ($notification_result['email'] === 'sent') {
                                    $success_message .= " | Email notifikasi terkirim";
                                }
                                if ($notification_result['telegram'] === 'sent') {
                                    $success_message .= " | Telegram notifikasi terkirim";
                                }
                                
                            } catch (Exception $e) {
                                $pdo->rollBack();
                                $error_message = 'Error saat memproses pengajuan: ' . $e->getMessage();
                            }
                        }
                    }
                }
            } else {
                // Validasi tanda tangan untuk jenis izin lainnya
                if (empty($user_data['tanda_tangan_file']) && empty($signature_data)) {
                    $error_message = 'Tanda tangan wajib diisi.';
                } else {
                    // Process other leave types
                    try {
                        $pdo->beginTransaction();
                        
                        // Handle tanda tangan if needed
                        $ttd_file = $user_data['tanda_tangan_file'];
                        if (empty($ttd_file) && !empty($signature_data)) {
                            $ttd_file = 'ttd_' . $user_id . '_' . time() . '.png';
                            $ttd_path = 'uploads/tanda_tangan/' . $ttd_file;
                            $data = $signature_data;
                            
                            if (preg_match('/^data:image\/\w+;base64,/', $data)) {
                                $data = substr($data, strpos($data, ',') + 1);
                                $data = base64_decode($data);
                                file_put_contents($ttd_path, $data);
                                
                                $stmt = $pdo->prepare('UPDATE register SET tanda_tangan_file = ? WHERE id = ?');
                                $stmt->execute([$ttd_file, $user_id]);
                            }
                        }
                        
                        $nomor_surat = strtoupper($jenis_izin) . date('YmdHis') . $user_id;
                        $file_surat = 'surat_' . $jenis_izin . '_' . $nomor_surat . '.docx';
                        $path_surat = 'uploads/surat_izin/' . $file_surat;
                        
                        if (!is_dir('uploads/surat_izin')) {
                            mkdir('uploads/surat_izin', 0777, true);
                        }
                        
                        file_put_contents($path_surat, 'Surat ' . $jenis_izin . ': ' . json_encode([
                            'nomor' => $nomor_surat,
                            'perihal' => $perihal,
                            'jenis' => $jenis_izin,
                            'tanggal_mulai' => $tanggal_mulai,
                            'tanggal_selesai' => $tanggal_selesai,
                            'lama' => $lama_izin,
                            'alasan' => $alasan,
                            'user' => $user_data['nama_lengkap'],
                            'outlet' => $user_data['outlet'],
                            'posisi' => $user_data['posisi']
                        ]));
                        
                        $sql = "INSERT INTO pengajuan_izin (
                            user_id, perifal, tanggal_mulai, tanggal_selesai, 
                            lama_izin, alasan, file_surat, tanda_tangan_file, 
                            status, tanggal_pengajuan, outlet, posisi, 
                            jenis_izin, approval_status
                        ) VALUES (?, ?, ?, ?, ?, ?, ?, ?, 'pending', NOW(), ?, ?, ?, ?)";
                        
                        $stmt = $pdo->prepare($sql);
                        $stmt->execute([
                            $user_id, $perihal, $tanggal_mulai, $tanggal_selesai,
                            $lama_izin, $alasan, $file_surat, $ttd_file,
                            $user_data['outlet'], $user_data['posisi'],
                            ucfirst($jenis_izin), 'pending_supervisor'
                        ]);
                        
                        $pdo->commit();
                        
                        $success_message = "Pengajuan surat izin berhasil! Nomor: $nomor_surat";
                        
                    } catch (Exception $e) {
                        $pdo->rollBack();
                        $error_message = 'Error saat memproses pengajuan: ' . $e->getMessage();
                    }
                }
            }
        }
    }
}

// Fungsi untuk mengirim notifikasi email dan telegram
function sendLeaveNotifications($pdo, $user_data, $jenis_izin, $nomor_surat) {
    $result = ['email' => 'pending', 'telegram' => 'pending'];
    
    try {
        // Update status notifikasi di database
        $stmt = $pdo->prepare("UPDATE pengajuan_izin SET 
                              status_email = 'sent', 
                              email_sent_at = NOW(), 
                              status_telegram = 'sent', 
                              telegram_sent_at = NOW() 
                              WHERE user_id = ? AND nomor_surat = ?");
        $stmt->execute([$user_data['id'], $nomor_surat]);
        
        // Placeholder untuk email notification
        $result['email'] = 'sent';
        
        // Placeholder untuk telegram notification  
        $result['telegram'] = 'sent';
        
    } catch (Exception $e) {
        error_log("Notification error: " . $e->getMessage());
    }
    
    return $result;
}

// Ambil data tanda tangan pengguna
$tanda_tangan_tersimpan = null;
$sql_user_ttd = "SELECT tanda_tangan_file FROM register WHERE id = ?";
$stmt_user_ttd = $pdo->prepare($sql_user_ttd);
$stmt_user_ttd->execute([$user_id]);
$user_ttd_data = $stmt_user_ttd->fetch(PDO::FETCH_ASSOC);
if ($user_ttd_data) {
    $tanda_tangan_tersimpan = $user_ttd_data['tanda_tangan_file'];
}
